<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">




    <!--班级显示数据-->
    <servlet>
        <servlet-name>GratelistServlet</servlet-name>
        <servlet-class>zhiyou.servlet.GradelistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GratelistServlet</servlet-name>
        <url-pattern>/gratelist</url-pattern>
    </servlet-mapping>

    <!--学生信息显示-->

    <servlet>
        <servlet-name>StudentlistServlet</servlet-name>
        <servlet-class>zhiyou.servlet.StudentlistServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentlistServlet</servlet-name>
        <url-pattern>/studentlist</url-pattern>
    </servlet-mapping>
    <!--删除数据-->
    <servlet>
        <servlet-name>GrateDeleteServlet</servlet-name>
        <servlet-class>zhiyou.servlet.GradeDelete</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GrateDeleteServlet</servlet-name>
        <url-pattern>/grateDelete</url-pattern>
    </servlet-mapping>
    <!--添加和修改数据-->
    <servlet>
        <servlet-name>Save</servlet-name>
        <servlet-class>zhiyou.servlet.GradeSaveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Save</servlet-name>
        <url-pattern>/grateSave</url-pattern>
    </servlet-mapping>
    <!--列出班级但不分页-->
    <servlet>
        <servlet-name>Combo</servlet-name>
        <servlet-class>zhiyou.servlet.GradeComboListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Combo</servlet-name>
        <url-pattern>/gradeComboList</url-pattern>
    </servlet-mapping>
    <!--删除学生数据-->
    <servlet>
        <servlet-name>studentDelet</servlet-name>
        <servlet-class>zhiyou.servlet.StudentDeletServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentDelet</servlet-name>
        <url-pattern>/studentDelete</url-pattern>
    </servlet-mapping>
    <!--添加学生数据-->
    <servlet>
        <servlet-name>studentAdd</servlet-name>
        <servlet-class>zhiyou.servlet.StudentAddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>studentAdd</servlet-name>
        <url-pattern>/studentAdd</url-pattern>
    </servlet-mapping>

</web-app>